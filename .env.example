# cp .env.example .env

# =====================
# bronivik_jr (core bot)
# =====================

# Telegram bot token
BOT_TOKEN=

# Google service account JSON path (inside container: e.g. /app/credentials.json)
GOOGLE_CREDENTIALS_FILE=

# Google Sheets IDs
USERS_SPREADSHEET_ID=
BOOKINGS_SPREADSHEET_ID=

# Optional Postgres (if you use it)
BOT_USER=
BOT_PASSWORD=
POSTGRES_DB=

# API auth for bronivik_crm -> bronivik_jr HTTP API
CRM_API_KEY=
CRM_API_EXTRA=

# Optional: override config locations
# CONFIG_PATH=configs/config.yaml
# ITEMS_PATH=configs/items.yaml
# CRM_CONFIG_PATH=bronivik_crm/configs/config.yaml
